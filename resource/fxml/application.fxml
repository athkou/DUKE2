<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<GridPane
        fx:controller="module4.Controller"
        stylesheets="/css/application.css"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center"
        hgap="10"
        vgap="10">

    <Text
            text = "Welcome to the Baby Name Application"
            styleClass="title"
            GridPane.rowIndex="0"
            GridPane.columnSpan="2"
            GridPane.halignment="CENTER"
    />
    <Label
            text = "Name"
            styleClass="label"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"
    />
    <TextField
            fx:id="first_name"
            GridPane.rowIndex="1"
            GridPane.columnIndex="1"
    />
    <Label
            text = "Year of birthday"
            GridPane.rowIndex="2"
            GridPane.columnIndex="0"
    />
    <TextField
            fx:id="birth_year"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"
    />
    <Label
            text = "New year"
            GridPane.rowIndex="3"
            GridPane.columnIndex="0"
    />
    <TextField
            fx:id="new_birth_year"
            GridPane.rowIndex="3"
            GridPane.columnIndex="1"
    />
    <Label
            text = "Gender"
            GridPane.rowIndex="4"
            GridPane.columnIndex="0"
    />
    <Label
            text = "New Name"
            GridPane.rowIndex="5"
            GridPane.columnIndex="0"
    />
    <TextField
            text ="${controller.new_name}"
            GridPane.rowIndex="5"
            GridPane.columnIndex="1"
    />
    <HBox
            spacing="10"
            alignment="BOTTOM_RIGHT"
            GridPane.rowIndex="6"
            GridPane.columnIndex="1">
            <Button
                    onAction="#HandleSubmitButton"
                    text = "Get New Name"
            />
    </HBox>
    <Text fx:id="action_target"
          GridPane.rowIndex="7"
          GridPane.columnIndex="0"
    />
</GridPane>